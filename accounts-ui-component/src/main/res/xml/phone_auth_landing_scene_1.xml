<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <ConstraintSet android:id="@+id/landing">
    <Constraint android:id="@id/imageAppLogo">
      <Layout
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </Constraint>
    <Constraint android:id="@+id/labelNumber">
      <Layout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/imageAppLogo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/imageAppLogo"
        app:layout_constraintTop_toBottomOf="parent" />
      <PropertySet android:visibility="gone" />
    </Constraint>
    <Constraint android:id="@id/inputLayoutNumber">
      <PropertySet android:visibility="gone" />
    </Constraint>
    <Constraint android:id="@id/inputLayoutNumber">
      <PropertySet android:visibility="gone" />
    </Constraint>
    <Constraint android:id="@id/buttonLogin">
      <PropertySet android:visibility="gone" />
    </Constraint>
    <Constraint android:id="@id/buttonSignUp">
      <PropertySet android:visibility="gone" />
    </Constraint>
  </ConstraintSet>

  <ConstraintSet android:id="@+id/login">
    <Constraint android:id="@id/imageAppLogo">
      <Layout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".25" />
    </Constraint>
    <Constraint android:id="@id/labelNumber">
      <PropertySet android:visibility="visible" />
    </Constraint>
    <Constraint android:id="@id/inputLayoutNumber">
      <PropertySet android:visibility="visible" />
    </Constraint>
    <Constraint android:id="@id/inputLayoutNumber">
      <PropertySet android:visibility="visible" />
    </Constraint>
    <Constraint android:id="@id/buttonLogin">
      <PropertySet android:visibility="visible" />
    </Constraint>
    <Constraint android:id="@id/buttonSignUp">
      <PropertySet android:visibility="visible" />
    </Constraint>
  </ConstraintSet>

</MotionScene>